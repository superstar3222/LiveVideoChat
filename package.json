{
    "name": "tauri-tray-app",
    "private": true,
    "version": "0.1.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "build:mac:x64": "tauri build --target x86_64-apple-darwin",
        "build:mac:arm": "tauri build --target aarch64-apple-darwin",
        "format": "prettier --write \"**/*.{ts,tsx}\" && (cd src-tauri && cargo fmt)",
        "preview": "vite preview",
        "tauri": "tauri"
    },
    "dependencies": {
        "@tauri-apps/api": "^1.3.0",
        "react-dom": "^18.2.0",
        "react": "^18.2.0"
    },
    "devDependencies": {
        "@tauri-apps/cli": "^1.3.1",
        "@types/node": "^18.7.10",
        "@types/react-dom": "^18.0.6",
        "@types/react": "^18.0.15",
        "@vitejs/plugin-react": "^3.0.0",
        "typescript": "^4.9.5",
        "vite": "^4.2.1"
    },
    "prettier": {
        "printWidth": 100,
        "jsxSingleQuote": true,
        "trailingComma": "es5",
        "singleQuote": true,
        "useTabs": false,
        "semi": false
    }
}
