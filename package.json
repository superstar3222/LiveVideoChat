{
    "name": "tauri-tray-app",
    "private": true,
    "version": "0.1.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "build:mac:x64": "tauri build --target x86_64-apple-darwin",
        "build:mac:arm": "tauri build --target aarch64-apple-darwin",
        "format": "prettier --write \"**/*.{ts,tsx}\" && (cd src-tauri && cargo fmt)",
        "update-deps": "npx --yes npm-check-updates -x typescript --deep --interactive",
        "preview": "vite preview",
        "tauri": "tauri"
    },
    "dependencies": {
        "@tauri-apps/api": "^1.4.0",
        "react-dom": "^18.2.0",
        "react": "^18.2.0",
        "wouter": "^2.11.0"
    },
    "devDependencies": {
        "@riipandi/prettier-config": "^0.2.1",
        "@tauri-apps/cli": "^1.4.0",
        "@types/node": "^20.4.5",
        "@types/react-dom": "^18.2.7",
        "@types/react": "^18.2.17",
        "@vitejs/plugin-react": "^4.0.3",
        "prettier": "^3.0.0",
        "typescript": "^5.1.6",
        "vite": "^4.4.7"
    },
    "prettier": "@riipandi/prettier-config"
}
