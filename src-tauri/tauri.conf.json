{
    "$schema": "https://github.com/tauri-apps/tauri/releases/download/tauri-build-v1.4.0/schema.json",
    "build": {
        "beforeDevCommand": "pnpm dev",
        "beforeBuildCommand": "pnpm build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist",
        "withGlobalTauri": false
    },
    "package": {
        "productName": "Tauri App",
        "version": "0.1.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "shell": {
                "all": false,
                "open": "^(.+)/([^/]+)$"
            },
            "fs": {
                "all": true,
                "scope": ["$HOME/Tauri App", "$HOME/Tauri App/**/*"]
            },
            "http": {
                "all": false,
                "request": true,
                "scope": ["https://github.com/riipandi/tauri-tray-app/*"]
            },
            "notification": {
                "all": true
            },
            "window": {
                "all": true
            },
            "dialog": {
                "all": true
            }
        },
        "bundle": {
            "active": true,
            "category": "Productivity",
            "identifier": "com.ripandis.tauri-tray-app",
            "copyright": "Copyright Â© 2023 Aris Ripandi",
            "publisher": "Aris Ripandi",
            "shortDescription": "",
            "longDescription": "",
            "resources": [],
            "targets": ["app", "dmg", "nsis", "deb", "appimage", "updater"],
            "macOS": {
                "minimumSystemVersion": "10.13",
                "frameworks": [],
                "license": "",
                "exceptionDomain": "",
                "entitlements": null,
                "providerShortName": null,
                "signingIdentity": null
            },
            "windows": {
                "allowDowngrades": true,
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": "",
                "nsis": {
                    "template": "",
                    "license": "",
                    "headerImage": "",
                    "sidebarImage": "",
                    "installMode": "both",
                    "installerIcon": "icons/icon.ico"
                }
            },
            "deb": {
                "files": {},
                "depends": []
            },
            "appimage": {
                "bundleMediaFramework": false
            },
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ]
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": false,
            "dialog": true,
            "endpoints": ["https://github.com/riipandi/tauri-tray-app/blob/main/updates.json"],
            "pubkey": ""
        },
        "macOSPrivateApi": true,
        "systemTray": {
            "iconPath": "icons/128x128@2x.png",
            "iconAsTemplate": true,
            "menuOnLeftClick": true
        },
        "windows": []
    }
}
